<div class="container d-flex justify-content-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Creating a new listing</h1>

      <%= form_with model: @camera do |form| %>

        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title %>
        </div>

        <div class="form-group mt-1">
          <%= form.label :description %>
          <%= form.text_area :description %>
        </div>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price %>
        </div>
        <div class="form-group ">
          <%= form.file_field :photo, class: "btn btn-dark row justify-content-center mt-3" %>
          <%= form.submit class: "btn btn-dark row justify-content-center mt-3"%>
        </div>
      <% end %>

        <div class="row justify-content-center mt-3">
          <button type="button" class="btn btn-dark row justify-content-center mt-3"><%= link_to "Back to Cameras", cameras_path%></button>
        </div>
    </div>
  </div>
  </div>

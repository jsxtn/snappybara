
  <div class="row">
    <div class="col-md-6">
      <h1 class="mb-4">Creating a new booking</h1>

      <%= form_with model: @booking do |form| %>

        <div class="form-group">
          <%= form.label :start_date %>
          <%= form.date_field :start_date %>
        </div>

        <div class="form-group mt-1">
          <%= form.label :end_date %>
          <%= form.date_field :end_date %>
        </div>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price %>
        </div>
        <div class="form-group ">
          <%= form.submit class: "btn btn-dark row justify-content-center mt-3"%>
        </div>
      <% end %>

    </div>
  </div>
